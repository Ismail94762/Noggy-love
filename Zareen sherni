<script>
let taps=0;

// Floating hearts or stars
function createFloat(){
    const el=document.createElement("div");
    el.className="float";
    const night=document.body.classList.contains("night");
    el.innerHTML=night?"‚ú®":"‚ù§Ô∏è";
    el.style.left=Math.random()*100+"vw";
    el.style.fontSize=14+Math.random()*20+"px";
    el.style.animationDuration=5+Math.random()*4+"s";
    document.body.appendChild(el);
    setTimeout(()=>el.remove(),9000);
}
setInterval(createFloat,480);

// Changing messages
const messages=[
    "Softly choosing you",
    "You make things feel safe",
    "My favorite calm",
    "Where my thoughts rest",
    "Still you"
];
let i=0;
setInterval(()=>{
    const el=document.getElementById("loveMsg");
    el.style.opacity=0;
    setTimeout(()=>{
        i=(i+1)%messages.length;
        el.textContent=messages[i];
        el.style.opacity=1;
    },500);
},4200);

// Taps
function registerTap(){
    taps++;
    if(taps===4){
        document.getElementById("popup").style.display="flex";
    }
    if(taps===7){
        document.getElementById("secretMsg").style.opacity=1;
    }
}
function closePopup(e){
    e.stopPropagation();
    document.getElementById("popup").style.display="none";
}

// Night
function toggleNight(e){
    e.stopPropagation();
    document.body.classList.toggle("night");
}
</script>

